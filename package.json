{
    "name": "telegram-bot",
    "version": "1.0.0",
    "description": "Telegram bot on JavaScript",
    "main": "src/bot.js",
    "type": "module",
    "scripts": {
        "start": "node src/bot.js",
        "dev": "node --watch src/bot.js",
